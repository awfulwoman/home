services:
  traefik:
    container_name: traefik
    ports:
      - "80:80"
      - "443:443"
    environment:
      - "TZ=Berlin/Europe"
      - "DO_AUTH_TOKEN={{ vault_letsencrypt_digitalocean_token }}"
    image: "{{ container_image }}"
    restart: unless-stopped
    labels:
      # Traefik can pick up label instructions just like any other container.
      # Traefik-ception so that Traefik is provided via Traefik
      - "traefik.enable=true"
      - "traefik.port=80"
      - "traefik.backend=traefik"
      # Allow dashboard access via traefik.{{ansible_hostname}}.affordablepotatoes.com
      - "traefik.http.routers.dashboard.rule=Host(`traefik.{{ansible_hostname}}.affordablepotatoes.com`)"
      - "traefik.http.routers.dashboard.service=dashboard@internal"
      - "traefik.http.routers.dashboard.tls=true"
      - "traefik.http.routers.dashboard.tls.certresolver=letsencrypt"
      # Allow API access via traefik.{{ansible_hostname}}.affordablepotatoes.com
      - "traefik.http.routers.api.rule=Host(`traefik.{{ansible_hostname}}.affordablepotatoes.com`) && PathPrefix(`/api`)"
      - "traefik.http.routers.api.service=api@internal"
      - "traefik.http.routers.api.tls=true"
      - "traefik.http.routers.api.tls.certresolver=letsencrypt"
    volumes:
      - "{{ container_config_dir }}/{{ container_name }}/providers:/etc/traefik/providers"
      - "{{ container_config_dir }}/{{ container_name }}/config.yaml:/traefik.yaml"
      - "{{ container_config_dir }}/letsencrypt:/letsencrypt"
      - "/var/run/docker.sock:/var/run/docker.sock"
      - "/etc/localtime:/etc/localtime:ro"
    extra_hosts:
      - "host.docker.internal:host-gateway"
