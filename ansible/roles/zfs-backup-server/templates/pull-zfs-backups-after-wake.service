[Unit]
Description="Run zfs-backup-pull after wake from suspend or hibernate"
After=sleep.target hybrid-sleep.target 

[Service]
User=root
Type=oneshot
ExecStart=su -s /bin/bash -c "{{ zfsbackup_script_path }}" -g {{ ansible_user }} {{ ansible_user }} 
TimeoutSec=0

[Install]
WantedBy=sleep.target hybrid-sleep.target 

