# code: language=ansible
name: "{{ composition_name }}"
services:
  homeassistant:
    container_name: homeassistant
    privileged: true
    network_mode: host
    image: ghcr.io/home-assistant/home-assistant:2024.9
    restart: unless-stopped
    env_file: .environment_vars
    labels:
      - "traefik.enable=true"
      - "homepage.group=Home Automation"
      - "homepage.name=Home Assistant"
      - "homepage.href=https://homeassistant.{{ domain_name }}"
      - "homepage.description=The brains of the home"
    volumes:
      - "{{ composition_config }}:/config"
      - "{{ composition_config }}/media:/media"
      - /etc/localtime:/etc/localtime:ro

  esphome:
    container_name: esphome
    ports:
      - "0.0.0.0:6052:6052"
    privileged: true
    environment:
      - "TZ=Europe/Berlin"
      - "ESPHOME_DASHBOARD_USE_PING=true"
    image: esphome/esphome
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.esphome.rule=Host(`esphome.{{ domain_name }}`)"
      - "traefik.http.routers.esphome.tls=true"
      - "traefik.http.routers.esphome.tls.certresolver=letsencrypt"
      - "com.centurylinklabs.watchtower.enable=false"
    volumes:
      - "{{ composition_config }}:/esphome"
      - "/etc/localtime:/etc/localtime:ro"
networks:
  "{{ default_docker_network }}":
    external: true
