services:
  wyomingpiper:
    container_name: "{{ container_name }}"
    ports:
      - 10200:10200
    environment:
      - "TZ=Europe/Berlin"
    image: "{{ container_image }}"
    restart: unless-stopped
    command: "--voice en-gb-southern_english_female-low"
    labels:
      - "diun.enable=true"
    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      - "{{ container_config_dir }}/{{ container_name }}:/data"
